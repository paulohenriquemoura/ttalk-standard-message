{
    "$schema": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/opportunity/v1/2_000/jsonschema/schemas/Opportunity_2_000.json#",
    "info":{
        "description": "API para a entidade de Oportunidades (opportunity) para produtos TOTVS",
        "version": "2.000",
        "title": "Opportunity",
        "contact":{
            "name": "T-Talk",
            "url": "api.Totvs.com.br",
            "email": "comiteintegracao@totvs.com.br"
        },
        "x-totvs":{
            "transactionDefinition": {
                "subType": "event",
                "businessContentType": {
                    "type": "object",
                    "$ref": "#/definitions/OpportunityInfo"
                },
                "returnContentType": {
                    "type": "object",
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/opportunity/v1/2_000/jsonschema/schemas/ListOfInternalId_1_000.json#/definitions/ReturnContentWithModelType"
                }
            },
            "messageDocumentation": {
                "name": "opportunity",
                "description": "Cadastro de Oportunidade",
                "segment": "services"
            },
            "productInformation": [
                {
                    "product":"protheus",
                    "contact":"squad.crm@totvs.com.br",
                    "description":"Cadastro de Oportunidade",
                    "adapter":"FATS300.prw"
                }
            ]
        }
    },
    "definitions":{
        "PagedOpportunity":{
            "type":"object",
            "allOf":[
                {
                    "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/opportunity/v1/2_000/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/Paging"
                },
                {
                    "$ref":"#/definitions/Opportunity"
                }
            ]
        },
        "Opportunity":{
            "type":"object",
            "properties":{
                "items":{
                    "type":"array",
                    "items":{
                        "$ref":"#/definitions/OpportunityInfo"
                    }
                }
            }
        },
        "OpportunityInfo":{
            "description": "Descreve uma Oportunidade",
            "type":"object",
            "properties":{
                "BranchId":{
                   "type":"string",
                   "description":"Código da Filial",
                   "example": "D MG 01 ",
                   "maxLength":12,
                   "x-totvs":[
                        {
                            "product":"protheus",
                            "field":"AD1.AD1_FILIAL",
                            "required":true,                               
                            "length":"8",
                            "available":true,
                            "canUpdate":false
                        }
                    ]
                },
                "CompanyInternalId":{
                   "type":"string",
                   "description":"Código da Empresa",
                   "example": "T1D MG 01 000001",
                   "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "EMPRESA|AD1.AD1_FILIAL|AD1.AD1_NROPOR",
                            "required": true,
                            "type": "varchar",
                            "length": "18",
                            "available": true,
                            "canUpdate": false,
                            "note": "Este dado e formado pelos campos Empresa, Filial e Código da Oportunidade"
                        }
                    ]                       
                },                
                "InternalId":{
                    "type":"string",                    
                    "description":"InternalId da Anotação no ERP",
                    "example": "D MG 01 000001",
                    "x-totvs":[
                        {
                            "product": "protheus", 
                            "field": "AD1.AD1_FILIAL|AD1.AD1_NROPOR",
                            "type": "varchar",
                            "length": "16",
                            "available":true,
                            "note": "Este dado e formado pelos campos Filial e Código da Oportunidade"
                        }                         
                    ]
                },
                "Code":{
                    "type": "string",
                    "example": "000001",
                    "description": "Código da Oportunidade",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_NROPOR",
                            "type": "varchar",
                            "length": "6",
                            "required": true,
                            "available": true,
                            "canUpdate": false
                        }                         
                    ]
                },
                "Review":{
					"type": "string",
                    "example": "01",
                    "description": "Revisão da Oportunidade",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_REVISA",
                            "type": "varchar",
                            "length": "2",
                            "required": true,
                            "available": true,
                            "canUpdate": false
                        }                         
                    ]
                },
                "Description":{
					"type": "string",
                    "example": "Oportunidade 000001",
                    "description": "Descrição da Oportunidade",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_DESCRI",
                            "type": "varchar",
                            "length": "30",
                            "required": true,
                            "available": true,
                            "canUpdate": true
                        }                         
                    ]
                },
				"Seller":{
					"type": "string",
                    "example": "VEND01",
                    "description": "Código do Vendedor",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_VEND",
                            "type": "varchar",
                            "length": "6",
                            "required": true,
                            "available": true,
                            "canUpdate": true
                        }                         
                    ]
                },
				"SellerName":{
					"type": "string",
                    "example": "Vendedor Nome",
                    "description": "Nome do Vendedor",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "SA3.A3_NOME",
                            "type": "varchar",
							"note": "Este campo é preenchido automaticamente quando informado o código do vendedor",
                            "length": "40",
                            "required": false,
                            "available": true,
                            "canUpdate": false
                        }                         
                    ]
                },
				"ListofConsumer":{
                    "type":"array",
                    "description":"Informações do Cliente",
					"items":{                    
						"type":"array",
                        "$ref":"#/definitions/ConsumerData"
                    }
                },
                "StartDate":{
					"type": "string",
					"format": "date-time",
                    "example": "1900-01-01T12:00:00Z",
                    "description": "Data de Inicio",
                    "x-totvs":[
                        {
							"product": "protheus",
                            "field": "AD1.AD1_DTINI",
                            "type": "date-time",
                            "length": "08",
                            "required": true,
                            "available": true,
                            "canUpdate": true
                        }                         
                    ]
                },
				"ClosingDate":{
					"type": "string",
					"format": "date-time",
                    "example": "1900-01-01T12:00:00Z",
                    "description": "Data de Fechamento",
                    "x-totvs":[
                        {
							"product": "protheus",
                            "field": "AD1.AD1_DTFIM",
                            "type": "date-time",
                            "length": "08",
                            "required": false,
                            "available": true,
                            "canUpdate": true
                        }                         
                    ]
                },
                "Process":{
					"type": "string",
                    "example": "000001",
                    "description": "Processo de Venda",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_PROVEN",
                            "type": "varchar",
                            "length": "6",
                            "required": true,
                            "available": true,
                            "canUpdate": true
                        }                         
                    ]
                },
                "Stage":{
					"type": "string",
                    "example": "000001",
                    "description": "Estágio da Venda",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_STAGE ",
                            "type": "varchar",
                            "length": "6",
                            "required": true,
                            "available": true,
                            "canUpdate": true
                        }
                    ]
                },
				"Notes":{
                	"type": "string",
                    "example": "Anotacoes",
                    "description": "Notas",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_MEMO",
                            "type": "varchar",
							"note": "Campo do tipo MEMO no Protheus",
                            "required": false,
                            "available": true,
                            "canUpdate": true
                        }                         
                    ]
                },
                "Currency":{
                	"description": "Moeda da Verba",
                    "example":1,
                    "type":"number",
                    "minimum":1,
                    "maximum":99,
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_MOEDA",
                            "type": "integer",
                            "length": "2",
                            "required": true,
                            "available": true,
                            "canUpdate": true
                        }                         
                    ]
                },
                "Priority":{
					"type": "string",
                    "example": "1",
					"description":"Prioridade. 1 - Baixa 2 - Media 3 - Alta.",
					"maxlength":1,
					"enum":[
						"1",
						"2",
						"3"
					],
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_PRIOR",
                            "type": "varchar",
                            "length": "1",
                            "required": true,
                            "available": true,
                            "canUpdate": true
                        }                         
                    ]
                },
				"SuccessFactor":{
                	"type": "string",
                    "example": "000001",
                    "description": "Fator Crítico de Sucesso",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_FCS",
                            "type": "varchar",
                            "length": "6",
                            "required": false,
                            "available": true,
                            "canUpdate": true
                        }                         
                    ]
                },
				"FailureFactor":{
                	"type": "string",
                    "example": "000001",
                    "description": "Fator Crítico Insucesso",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_FCI",
                            "type": "varchar",
                            "length": "6",
                            "required": false,
                            "available": true,
                            "canUpdate": true
                        }
                    ]
                },                
				"Status":{
					"type": "string",
                    "example": "1",
					"description":"Status da Oportunidade. 1 - Aberto 2 - Perdido 3 - Suspenso 9 - Ganha.",
					"maxlength":1,
					"enum":[
						"1",
						"2",
						"3",
						"9"
					],
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_STATUS",
                            "type": "varchar",
                            "length": "1",
                            "required": true,
                            "available": true,
                            "canUpdate": true
                        }
                    ]
                },
				"Ending":{
					"type": "string",
                    "example": "000001",
                    "description": "Código do Encerramento",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_ENCERR",
                            "type": "varchar",
                            "length": "6",
                            "required": false,
                            "available": true,
                            "canUpdate": true
                        }                         
                    ]
                },				
				"Reason":{
                	"type": "string",
                    "example": "Razao do Encerramento",
                    "description": "Motivo do Encerramento",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_MTVENC",
                            "type": "varchar",
							"note": "Campo do tipo MEMO no Protheus",
                            "required": false,
                            "available": true,
                            "canUpdate": true
                        }
                    ]
                },
				"DateSignature":{
					"type": "string",
					"format": "date-time",
                    "example": "1900-01-01T12:00:00Z",
                    "description": "Data de Assinatura da Proposta",
                    "x-totvs":[
                        {
							"product": "protheus",
                            "field": "AD1.AD1_DTASSI",
                            "type": "date-time",
                            "length": "08",
                            "required": false,
                            "available": true,
                            "canUpdate": true
                        }                         
                    ]
                },
				"Comments":{
                	"type": "string",
                    "example": "Observacao",
                    "description": "Observações da Proposta",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_OBSPRO",
                            "type": "varchar",
							"note": "Campo do tipo MEMO no Protheus",
                            "required": false,
                            "available": true,
                            "canUpdate": true
                        }
                    ]
                },
				"ListOfContacts":{
                    "type":"array",
                    "description":"Informações de Contato",
                    "items":{
                        "type":"object",
                        "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/schemas/types/ContactInformation_1_000.json#/definitions/ContactInformationType"
                    }
                }
			}
		},
		"ConsumerData":{
            "type":"object",
            "properties":{
                "ConsumerType":{
                    "type":"String",                    
                    "description":"Define o tipo de cliente da oportudade de venda. 1 - Cliente 2 - Prospect.",
                    "maxlength":1,
                    "enum":[
                        "1",
                        "2"
                    ]
                },
				"ConsumerId":{
                    "type": "string",
                    "example": "CLI001",
                    "description": "Código do Cliente|Prospect",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_CODCLI|AD1.AD1_PROSPE",
                            "type": "varchar",
                            "length": "6",
                            "required": false,
                            "available": true,
                            "canUpdate": false
                        }                         
                    ]
                },
                "ConsumerUnit":{
                    "type": "string",
                    "example": "01",
                    "description": "Loja do Cliente|Prospect",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "AD1.AD1_LOJCLI|AD1.AD1_LOJPRO",
                            "type": "varchar",
                            "length": "2",
                            "required": false,
                            "available": true,
                            "canUpdate": false
                        }                         
                    ]
                },
				"ConsumerName":{
                    "type": "string",
                    "example": "Cliente Nome",
                    "description": "Nome do Cliente|Prospect",
                    "x-totvs":[
                        {
                            "product": "protheus",
                            "field": "SA1.A1_NOME|SUS.US_NOME",
                            "type": "varchar",
							"note": "Este campo é preenchido automaticamente quando informado o código do cliente",
                            "length": "40",
                            "required": false,
                            "available": true,
                            "canUpdate": false
                        }                         
                    ]
                }
            }
        }
	}
}