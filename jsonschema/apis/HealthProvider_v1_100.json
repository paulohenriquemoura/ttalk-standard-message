{
  "openapi": "3.0.1",
  "servers": [
    {
      "description": "API para prestadores de serviços de saúde",
      "url": "http://{serverUrl}:{serverHttpPort}/api/hat/healthcare/v1",
      "variables": {
        "serverUrl": {
          "default": "localhost"
        },
        "serverHttpPort": {
          "default": "4202"
        }
      }
    }
  ],
  "info": {
    "description": "API para prestadores de serviços de saúde",
    "version": "1.100",
    "title": "Health Service Provider",
    "contact": {
      "name": "T-Talk",
      "url": "http://api.totvs.com.br",
      "email": "comiteintegracao@totvs.com.br"
    },
    "x-totvs": {
      "messageDocumentation": {
        "name": "Health Service Provider",
        "description": "Prestador de serviços em Saúde",
        "segment": "HealthCare"
      },
      "productInformation": [
        {
          "product": {
            "product": "HAT",
            "contact": "healthcare.autorizador@totvs.com.br",
            "description": "Plataforma de autorização de procedimentos e eventos em Saúde"
          }
        }
      ]
    }
  },
  "paths": {
    "/healthProvider/{healthProviderId}/specialty": {
      "get": {
        "tags": [
          "healthProviders"
        ],
        "operationId": "getHealthProviders",
        "summary": "Especialidades do Prestador (CBOS)",
        "description": "Retorna as especialidade que o prestador informado pode atender",
        "x-totvs": {
          "productInformation": [
            {
              "product": {
                "product": "HAT",
                "available": true,
                "description": "Este verbo esta disponível com os parâmetros Authorization, ExpiresAt e healthProviderId"
              }
            }
          ]
        },
        "parameters": [
          {
            "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/parameters/Authorization"
          },
          {
            "$ref": "#/components/parameters/ExpiresAt"
          },
          {
            "$ref": "#/components/parameters/HealthProviderId"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/HealthProvider/V1/1_100/jsonschema/HealthProvider_1_100.json#/definitions/PagedHealthProvider"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModel"
                }
              }
            }
          }
        }
      }
    },
    "/healthProviders": {
      "post": {
        "tags": [
          "healthProviders"
        ],
        "operationId": "healthProviderUpdate",
        "summary": "Inclusão e alteração de prestadores",
        "description": "Permite a inclusão e alteração de prestadores da operadora.",
        "x-totvs": {
          "productInformation": [
            {
              "product": "HAT",
              "available": true,
              "note": "Este verbo está disponível com o parâmetro authorizationId"
            }
          ]
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/HealthProvider/V1/1_100/jsonschema/HealthProvider_1_100.json#/definitions/HealthProviderUpdateRequest"
              }
            }
          },
          "description": "Informações enviadas para atualização de prestadores",
          "required": true
        },
        "responses": {
          "202": {
            "description": "Adicionou uma requisicao na fila de processamento",
            "headers": {
              "location": {
                "description": "URL onde o recurso estará disponível",
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/Authorization/V1/1_100/jsonschema/schemas/Authorization_1_100.json#/definitions/TokenProcessResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "https://raw.githubusercontent.com/totvs/ttalk-standard-message/master/jsonschema/apis/types/totvsApiTypesBase.json#/definitions/ErrorModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "ExpiresAt": {
        "name": "Expires_at",
        "in": "header",
        "description": "Data e hora da expiração do token em segundos",
        "required": true,
        "schema": {
          "type": "string"
        }
      },
      "HealthProviderId": {
        "name": "healthProviderId",
        "in": "path",
        "description": "Tipo do atendimento",
        "required": true,
        "schema": {
          "type": "integer"
        }
      }
    }
  }
}